{% extends '::layout.html.twig' %}

{% block title %}{{ parent() }} - Video {{ videoNumber }}/{{ numberOfVideos }}{% endblock title %}

{% block body %}

    <h1>Test video {{ videoNumber }}/{{ numberOfVideos }}</h1>

    <!-- {{ videoTitle }} -->

    <div class="row" style="height:430px;">
        <div class="col-md-8 col-md-offset-2">
            <div id="video-player" class="video-player"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'attr': {'class': ''}}) }}
                <div class="form-group">
                    {{ form_label(form.downloadTime, 'form_download_time'|trans|capitalize ) }}
                    {{ form_errors(form.downloadTime) }}
                    {{ form_widget(form.downloadTime, {'attr': { 'data-parsley-trigger':'change'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.readingQuality, 'form_reading_quality'|trans|capitalize ) }}
                    {{ form_errors(form.readingQuality) }}
                    {{ form_widget(form.readingQuality, {'attr': { 'data-parsley-trigger':'change'}}) }}
                </div>
                {{ form_row(form.next, { 'label': 'next'|trans|capitalize }) }}
            {{ form_end(form) }}
        </div>
    </div>

{% endblock body %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript" src="http://jwpsrv.com/library/TQ5uttalEeOsKiIACrqE1A.js"></script>
    <script type="text/javascript">
        jwplayer.key = "rbfdTQPgQ12F4CKwMQl0jRGoIC1facbntn2IAQ==";
        jwplayer("video-player").setup({
            file: "{{ videoUrl }}",
            width: "100%",
            autoplay: true,
            autostart: true, // Not working on Chrome for Ubuntu without this option
            aspectratio: '16:9'
        });
    </script>
{% endblock %}
